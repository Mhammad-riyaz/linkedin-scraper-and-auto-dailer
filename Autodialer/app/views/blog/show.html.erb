<header>
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <div>
      <h1>Blog</h1>
      <p class="subtitle">Programming Articles & Tutorials</p>
    </div>
    <div style="display: flex; gap: 12px;">
      <%= button_to "Delete Article", blog_article_path(@article), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this article?" } %>
      <%= link_to "Back to Blog", blog_path, class: "btn btn-secondary" %>
    </div>
  </div>
</header>

<div class="main-content">
  <div class="left-column" style="grid-column: 1 / -1;">
    <div class="panel" style="height: 100%; overflow-y: auto;">
      <article>
        <h2 style="font-size: 28px; margin-bottom: 12px; color: #1a1a1a;"><%= @article.title %></h2>
        
        <div style="color: #6b7280; font-size: 13px; margin-bottom: 24px; padding-bottom: 16px; border-bottom: 1px solid #e5e5e5;">
          Generated <%= @article.generated_at&.strftime("%B %d, %Y at %I:%M %p") || @article.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>

        <div class="article-content">
          <%= markdown(@article.content) %>
        </div>
      </article>
    </div>
  </div>
</div>

<style>
  .article-content {
    color: #1a1a1a;
    font-size: 15px;
    line-height: 1.7;
  }
  
  .article-content h1,
  .article-content h2,
  .article-content h3,
  .article-content h4 {
    color: #1a1a1a;
    font-weight: 600;
    margin-top: 24px;
    margin-bottom: 12px;
    line-height: 1.3;
  }
  
  .article-content h1 {
    font-size: 24px;
  }
  
  .article-content h2 {
    font-size: 20px;
  }
  
  .article-content h3 {
    font-size: 18px;
  }
  
  .article-content h4 {
    font-size: 16px;
  }
  
  .article-content p {
    margin-bottom: 16px;
    color: #374151;
  }
  
  .article-content code {
    background: #f3f4f6;
    padding: 2px 6px;
    border-radius: 4px;
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', monospace;
    font-size: 13px;
    color: #1a1a1a;
  }
  
  .article-content pre {
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    padding: 16px;
    border-radius: 6px;
    overflow-x: auto;
    margin: 16px 0;
  }
  
  .article-content pre code {
    background: transparent;
    padding: 0;
    font-size: 13px;
    line-height: 1.6;
  }
  
  .article-content ul,
  .article-content ol {
    margin-left: 24px;
    margin-bottom: 16px;
    color: #374151;
  }
  
  .article-content li {
    margin-bottom: 8px;
    line-height: 1.6;
  }
  
  .article-content a {
    color: #1a1a1a;
    text-decoration: underline;
  }
  
  .article-content a:hover {
    color: #000000;
  }
  
  .article-content blockquote {
    border-left: 3px solid #e5e7eb;
    padding-left: 16px;
    margin: 16px 0;
    color: #6b7280;
    font-style: italic;
  }
  
  .article-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 16px 0;
  }
  
  .article-content th,
  .article-content td {
    border: 1px solid #e5e7eb;
    padding: 8px 12px;
    text-align: left;
  }
  
  .article-content th {
    background: #f9fafb;
    font-weight: 600;
  }
  
  .article-content strong {
    font-weight: 600;
    color: #1a1a1a;
  }
  
  .article-content em {
    font-style: italic;
  }
</style>
